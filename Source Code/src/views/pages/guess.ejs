  </head>
    <body onload="load_drawing()">

    <style>
    body {
      background-color:#FBCBC9;
      width:50%; /* conditional based on screen size? */
      margin: auto;
      font-family: 'Bevan';
      font-size: 50px;
      color: #52a4a7;
      /*background-image: url("../resources/imgs/background.png");
      background-attachment: fixed;
      background-position: center;
      background-repeat: no-repeat; */
    }
    </style>

    <br />

    <script>
      var game_code = '<%= gameCode %>';
    </script>

    <div class="row">
        <div class="col-md-4"></div>

        <div class="col-md-4">
            <p></p>
            <form action="/guess/endGuess" method="post">
              <input type="hidden" name="GameCode" value="<%= gameCode %>" >
              <input type="hidden" name="userid" value="<%= userId %>" >
              <input type="hidden" name="scoreIn" id="scoreIn">
              <button type="submit" role="button" id="endRound" style="display: none;"></button>
           </form>
            <p></p>
        </div>

        <div class="col-md-4"></div>

    </div>

    <div class="container" style="text-align:right" id="app"></div>
    <div class="container" style="font-family: 'Bevan'; color: #731b2a" id="score_spot"> Score: </div>

    <div class="container" margin-left="auto" margin-right="auto">
      <br />
          <div class="card">
            <img
              class="card-img-top"
              id="drawing"
              src="/draw/image/<%= gameCode %>.svg?<%= new Date().getTime(); %>"
              alt="Placeholder for Drawing"
            />
            <!---<svg width="600" height="600">       
              <image xlink:href="/draw/image/000001.svg" id="drawing" width="600" height="600"/>    
            </svg>--->
          </div>
    </div>

    <div id="correctAns" style="color: transparent;"><%=correct%></div>

    <script>
    var guesses = [];
    var ans = document.getElementById("correctAns").innerHTML; //make this sql call
    //console.log(ans);
    </script>




    <div class="container">
      <form class="form-signin" autocomplete="off" onsubmit="check_guess(guesses,ans)" id="myForm">
        <script>
        var form = document.getElementById("myForm");
        function handleForm(event) { event.preventDefault(); }
        form.addEventListener('submit', handleForm);
        </script>
        <label for="guess" class="sr-only">Guess</label>
        <input
          type="text"
          id="guess"
          class="form-control"
          placeholder="Guess"
          required
          autofocus
        />
      </form>
    </div>

    <br />
    <center>
      <h3 style="font-family: 'Bevan'; color: #731b2a">Guesses</h3>
    </center>
    <center>
      <div class="container" margin-left="auto" margin-right="auto">
        <h5 id="guesses_list" style="font-family: 'Bevan'" /h5>
      </div>
    </center>

    <br />

    <script
      src="https://code.jquery.com/jquery-3.4.1.js"
      integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
      crossorigin="anonymous"
    ></script>
